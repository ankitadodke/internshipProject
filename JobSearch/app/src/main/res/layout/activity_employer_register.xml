<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employer_register"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/login_employer"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:layout_gravity="center"
        android:contentDescription="@string/Title"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hire_your_staff_here"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:fontFamily="@font/open_sans_bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Register"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:fontFamily="@font/open_sans_semibold"
        />
    <TextView
        android:id="@+id/login_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_phone_number"
        android:gravity="center"
        android:textColor="@color/gray"
        android:fontFamily="@font/open_sans_semibold"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <Spinner
            android:id="@+id/country_code_text"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_input_bg"
            android:layerType="none"
            android:padding="5dp"
            android:spinnerMode="dropdown"
            android:visibility="visible"

            />

        <EditText
            android:id="@+id/phone_number_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="8dp"
            android:ems="10"
            android:fontFamily="@font/open_sans_semibold"
            android:hint="@string/phone_number"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/text_input_bg"
            />


    </LinearLayout>
    <Button
        android:id="@+id/generate_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/primary_btn_bg"
        android:text="@string/send_otp"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_semibold"
        android:textSize="15sp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/layout1"
        >
        <TextView
            android:id="@+id/gmail_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/try_another_way_to_login"
            android:layout_marginTop="5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/gmail_link1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gmail"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/black"
        />



</LinearLayout>

