<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.employer.DashboardEmployer">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".modules.employer.DashboardEmployer">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="?android:attr/actionBarSize"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/TextLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="start"
                        android:text="@string/dashboard_post_new_job"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:padding="@dimen/general_activity_padding">

            <TextView
                style="@style/TextLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_top_margin"
                android:text="@string/post_job_description"
                android:textColor="@color/colorPrimary" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTheme.TIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/post_job_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTxtJobTitle"
                    style="@style/AppTheme.GeneralEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="100" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTheme.TIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/post_job_required_skills">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/AppTheme.TIL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/post_job_location">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eTxtJobLocation"
                        style="@style/AppTheme.GeneralEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLength="100" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTxtSkillsRequired"
                    style="@style/AppTheme.GeneralEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="500" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTheme.TIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select_minimum_qualification">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTxtQualification"
                    style="@style/AppTheme.GeneralEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                    android:drawablePadding="@dimen/general_top_margin"
                    android:inputType="text"
                    android:maxLength="500" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTheme.TIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/english_knowledge_requirements">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTxtEnglish"
                    style="@style/AppTheme.GeneralEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="500" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTheme.TIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/experience_required">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTxtExp"
                    style="@style/AppTheme.GeneralEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="500" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTheme.TIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/job_information">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTxtJobInfo"
                    style="@style/AppTheme.GeneralEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="500" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTheme.TIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/post_job_pay_scale">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTxtPayScale"
                    style="@style/AppTheme.GeneralEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="500" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_top_margin"
                android:text="@string/post_job_pay_scale_note" />

            <TextView
                style="@style/TextLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/other_details"
                android:textColor="@color/colorPrimary" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTheme.TIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/job_timing">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTxtJobTime"
                    style="@style/AppTheme.GeneralEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="100" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTheme.TIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/working_days">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eTxtJobWorkingDays"
                    style="@style/AppTheme.GeneralEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="100" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_details"
                android:textColor="@color/colorPrimary" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTheme.TIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hr_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/HRName"
                    style="@style/AppTheme.GeneralEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="100" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTheme.TIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phone_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etxtMobileNo"
                    style="@style/AppTheme.GeneralEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone|number"
                    android:maxLength="100" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/AppTheme.TIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_address">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etxtmail"
                    style="@style/AppTheme.GeneralEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="100" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnPostJob"
                style="@style/GeneralSubmitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_section_top_margin"
                android:layout_marginBottom="@dimen/general_section_top_margin"
                android:enabled="false"
                android:text="@string/submit" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
