<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.profile.AddResume">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".modules.employer.DashboardEmployer">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="?android:attr/actionBarSize"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/TextLarge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="start"
                        android:text="@string/resume"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/general_section_top_margin"
        android:layout_marginTop="@dimen/general_section_top_margin"
        android:fontFamily="@font/open_sans_semi_bold"
        android:gravity="center"
        android:text="@string/upload_your_resume_here"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:text="@string/name_mobile_number_and_email_id_is_important_in_resume"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnUploadResume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:background="@drawable/primary_btn_bg_enabled"
        android:gravity="center"
        android:text="@string/click_to_upload_resume"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:text="@string/only_in_pdf_and_doc" />

    <Button
        android:id="@+id/btnViewResume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_margin="8dp"
        android:background="@drawable/primary_btn_bg_enabled"
        android:text="@string/add_resume_view_existing"
        android:textColor="@color/white"
        android:visibility="gone" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/general_section_top_margin"
        android:text="@string/dont_have_resume_n_create_resume_in_few_steps"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnCreateResume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/secondary_btn_bg"
        android:drawableStart="@drawable/ic_baseline_edit_24"
        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
        android:drawablePadding="8dp"
        android:layout_margin="@dimen/general_section_top_margin"
        android:gravity="center"
        android:text="@string/view_your_resume"
        android:textColor="@color/black" />
</LinearLayout>