<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_tint_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/general_activity_padding">

                <TextView
                    style="@style/TextMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_school_24"
                    android:drawablePadding="8dp"
                    android:gravity="start"
                    android:padding="@dimen/general_activity_padding"
                    android:text="@string/education" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/AppTheme.TIL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:hint="@string/qualification">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/AppTheme.GeneralEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/AppTheme.TIL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/school">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/AppTheme.GeneralEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/general_section_top_margin"
                    android:weightSum="10"
                    tools:ignore="DisableBaselineAlignment">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/AppTheme.TIL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="5"
                        android:layout_marginEnd="5dp"
                        android:hint="@string/school_medium">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/AppTheme.GeneralEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/AppTheme.TIL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="5"
                        android:layout_marginStart="5dp"
                        android:hint="@string/how_i_speak_english">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/AppTheme.GeneralEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_section_top_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/general_activity_padding">

                <TextView
                    style="@style/TextMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="8dp"
                    android:padding="@dimen/general_activity_padding"
                    android:text="@string/certificates" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/AppTheme.TIL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:hint="@string/basic_certificates">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/AppTheme.GeneralEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_section_top_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/general_activity_padding">

                <TextView
                    style="@style/TextMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:drawableStart="@drawable/ic_baseline_skills_24"
                    android:drawablePadding="8dp"
                    android:padding="@dimen/general_activity_padding"
                    android:text="@string/skills" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/AppTheme.TIL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:hint="@string/basic_skills">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/AppTheme.GeneralEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>